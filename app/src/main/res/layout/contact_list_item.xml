<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_padding"
    android:layout_margin="@dimen/list_item_padding"
    android:background="@color/colorPrimary"
    >
    <ImageView
        android:layout_width="@dimen/list_view_icon_size"
        android:layout_height="@dimen/list_view_icon_size"
        android:id="@+id/ivContactImage"
        android:layout_centerVertical="true"
        android:src="@drawable/unknown_contact_icon_48px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ivContactImage"
        android:layout_toEndOf="@id/ivContactImage"
        android:layout_marginLeft="@dimen/small_image_margin"
        android:layout_marginStart="@dimen/small_image_margin"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvContactName"
            android:textSize="@dimen/list_view_medium_text_size"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvContactNumber"
            android:textSize="@dimen/list_view_small_text_size"
            android:textColor="@android:color/white"
            />

    </LinearLayout>
</RelativeLayout>